model Section {
  id           String     @id @default(uuid())
  number       Int 
  imageUrl     String?
  description  String?
  instructor   String?   
  createdBy    String    
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  capacity     Int
  workshopId   String
  timeBlocks   TimeBlock[]
  user         User       @relation("UserSection", fields: [createdBy], references: [id])
  workshop     Workshop   @relation(fields: [workshopId], references: [id], onDelete: Cascade)

  @@unique([number, workshopId])
  @@map("sections")
}
