model User {
  id         String   @id @default(uuid())
  fullName   String
  email      String   @unique
  password   String
  roleId     String
  role       Role     @relation(fields: [roleId], references: [id])
  lastLogin  DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  createdWorkshops Workshop[] @relation("UserWorkshops")
  bookings         Booking[]
  sections         Section[]  @relation("UserSection")
  @@map("users")
}
